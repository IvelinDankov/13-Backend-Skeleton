<fieldset>
  <legend>
    Create Your Plant!
  </legend>
  <h2> Create Form </h2>
  <form method="post">
    <input type="text" placeholder="Title" name="title" />
    <br />
    <br />
    <input type="text" placeholder="Image" name="imageUrl" />
    <br />
    <br />
    <textarea
      name="description"
      id="description"
      placeholder="Description"
    ></textarea>
    <br />
    <br />
    <input type="number" placeholder="Price" name="price" />
    <br />
    <br />
    <input type="text" placeholder="Sort" name="sort" />
    <br />
    <br />
    <button type="submit"> Creat new Plant </button>
  </form>
</fieldset>